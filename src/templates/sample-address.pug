include mixins/smallbtn

block title
    title Sample address

block body
    body.sample-address
block content
    .dashboard__wrapper
        .__content
            block products
                .place-order-products
                    table
                        thead
                            tr
                                th Product
                                th Amount
                                th Unit Price
                                th Total Price
                        tbody
                            tr
                                td
                                    .product-card
                                        img(src="./img/po-product-1.png" width="90" height="90" alt="")
                                        .product-card-desc
                                            h3 Test Print for Review
                                            p Organic Hoodie (Short)
                                            .product-card-desc-footer
                                                span Color: black
                                                span Size: S
                                            button(type="button").btn-edit
