                                                span Edit
                                td
                                    input(type="number" value="2").main-form__input.main-form__input-number
                                td
                                    span.price 37,34 €
                                td
                                    span.price 75.48 €

        .__sidebar
            block sidebar
                block modal
                form(action="")#form_sample_address.dashboard__product__popup-content__review__sideblock
                    .tabs.no-border
                        a(href="").tab.active Billing Adress
                    .dashboard__product__popup-content__content
                        .main-form#billing_form
                            .main-form__line
                                input.main-form__input#billing_form_companyname(type="text" name="companyname" placeholder="Gottesshirt LLC." value="" required)
                                label.main-form__lable(for="billing_form_companyname") Company / Store name
                            .forminputs__wrapper.mailgrid
                                .main-form__line
                                    input.main-form__input#billing_form_email(type="email" name="email" placeholder="dima.shatunov@gmail.com" value="" required)
                                    label.main-form__lable(for="billing_form_email") Email
                                .main-form__line
                                    input.main-form__input#billing_form_phone(type="tel" name="phone" placeholder="+49 9039580" value="" required)
                                    label.main-form__lable(for="billing_form_phone") Phone
                            .main-form__line
                                input.main-form__input#billing_form_address1(type="text" name="address1" placeholder="Berlin, Deutsch Schtrazze, 61/B" value="")
                                label.main-form__lable(for="billing_form_address1") Address 1
                            .main-form__line
                                input.main-form__input#billing_form_address2(type="text" name="address2" placeholder="Placeholder")
                                label.main-form__lable(for="billing_form_address2") Address 2
                            .forminputs__wrapper
                                .main-form__line
                                    input.main-form__input#billing_form_country(type="text" name="country" placeholder="Germany" value="")
                                    label.main-form__lable(for="billing_form_country") Country
                                .main-form__line
                                    input.main-form__input#billing_form_state(type="text" name="state" placeholder="State" value="")
                                    label.main-form__lable(for="billing_form_state") State
                            .forminputs__wrapper
                                .main-form__line
                                    input.main-form__input#billing_form_city(type="text" name="city" placeholder="Berlin" value="")
                                    label.main-form__lable(for="billing_form_city") City
                                .main-form__line
                                    input.main-form__input#billing_form_zip(type="text" name="zip" placeholder="44350" value="")
                                    label.main-form__lable(for="billing_form_zip") Postal / ZIP Code
                            .main-form__line
                                label.main-form__lable.toggler-wrapper
                                    span Use billing address as delivery address
                                    <input class="toggler" type="checkbox" name="address" checked>

                        #delivery_form(style="display:none")
                            h5.form-title Delivery Address
                            .main-form#billing_form
                                .main-form__line
                                    input.main-form__input#billing_form_companyname(type="text" name="companyname" placeholder="Gottesshirt LLC." value="" required)
                                    label.main-form__lable(for="billing_form_companyname") Company / Store name
                                .forminputs__wrapper.mailgrid
                                    .main-form__line
                                        input.main-form__input#billing_form_email(type="email" name="email" placeholder="dima.shatunov@gmail.com" value="" required)
                                        label.main-form__lable(for="billing_form_email") Email
                                    .main-form__line
                                        input.main-form__input#billing_form_phone(type="tel" name="phone" placeholder="+49 9039580" value="" required)
                                        label.main-form__lable(for="billing_form_phone") Phone
                                .main-form__line
                                    input.main-form__input#billing_form_address1(type="text" name="address1" placeholder="Berlin, Deutsch Schtrazze, 61/B" value="")
                                    label.main-form__lable(for="billing_form_address1") Address 1
                                .main-form__line
                                    input.main-form__input#billing_form_address2(type="text" name="address2" placeholder="Placeholder")
                                    label.main-form__lable(for="billing_form_address2") Address 2
                                .forminputs__wrapper
                                    .main-form__line
                                        input.main-form__input#billing_form_country(type="text" name="country" placeholder="Germany" value="")
                                        label.main-form__lable(for="billing_form_country") Country
                                    .main-form__line
                                        input.main-form__input#billing_form_state(type="text" name="state" placeholder="State" value="")
                                        label.main-form__lable(for="billing_form_state") State
                                .forminputs__wrapper
                                    .main-form__line
                                        input.main-form__input#billing_form_city(type="text" name="city" placeholder="Berlin" value="")
                                        label.main-form__lable(for="billing_form_city") City
                                    .main-form__line
                                        input.main-form__input#billing_form_zip(type="text" name="zip" placeholder="44350" value="")
                                        label.main-form__lable(for="billing_form_zip") Postal / ZIP Code

                    .dashboard__product__popup-content__save-btns.btop
