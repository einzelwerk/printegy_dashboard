extends core/_template

block title
	title Главная

block content
	.main
		.main__content
			.main__content-top
				img(src="./img/main-logo.svg" width="114" height="24" alt="").main__logo
				.main__lang
					include blocks/language-drop
				
			.main__content-form.-center
				h1.main__content-title Hey, Welcome to Printegy
				p.main__content-text Your new Shopify experience is starting here. Welcome on board!

				form.main-form#login_form(action="") 
					.main-form__line
						input.main-form__input#login_form_name(type="text" placeholder="Username / E-mail" required)
						label.main-form__lable(for="login_form_name") Login
					.main-form__line
						input.main-form__input#login_form_password(type="password" placeholder="***********************" required)
						label.main-form__lable(for="login_form_password") Password
					.main-form__line
						.checkbox
							input.checkbox__input#remember_checkbox(type="checkbox")
							label.checkbox__label(for="remember_checkbox") Remember this device for 30 <days></days>
					.main-form__btn
						button.btn.-blue(type="submit") Login

			.main__content-bottom
				.main__note Still don’t have our app? 
					a(href="#").main__note-link Get it right here
				.main__note
					a(href="#").main__note-link Forget your password?

		.main__preview
			.main__preview-text
				.main__preview-text-subtitle NEW EXPERIENCE
				.main__preview-text-title STARTING HERE

			picture.main__preview-pic
				source(srcset="./img/main-pic-1.webp, ./img/main-pic-1@2x.webp 2x" type="image/webp")
				source(srcset="./img/main-pic-1.png, ./img/main-pic-1@2x.png 2x" type="image/png")
				img(src="./img/main-pic-1.png" width="522" height="472" alt="").main__preview-pic-img
			
block scripts
	script(src="./js/just-validate.production.min.js")
