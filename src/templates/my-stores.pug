extends core/_dashboard-template

block title
    title My Stores

block content
    .dashboard__products-head
        h1.dashboard__title My Stores

    table.mystorestable.usertable.stblock
        thead
            tr
                th.store Store
                th.status Status
                th.actions Actions
        tbody
            tr.__item
                td.store GOTTESSHIRT
                td.status.done Active
                td.actions.flex-co
                    button.btn.-reverse(type="button") Visit
                    button.btn.-blue(type="button") Settings

    a(href="").usertablelinkto.p14-600.stm Connect another Shopify Store
   
block scripts
    script(src="js/dashboardproducts.js")